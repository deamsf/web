---
import Icons from './react/Icons'; // Import Icons component

interface BreadcrumbItem {
  label: string;
  href: string;
}

interface Props {
  items: BreadcrumbItem[];
}

const { items } = Astro.props;
---

<nav class="flex items-center gap-2 text-gray-400 mb-8">
  <a href="/" class="hover:text-accent transition-colors">
 <Icons.Home size={20} class="h-4 w-4" />
  </a>
  
  {items.map((item, index) => (
    <>
      <span>â€º</span>
      {index === items.length - 1 ? (
        <span class="text-gray-300">{item.label}</span>
      ) : (
        <a href={item.href} class="hover:text-accent transition-colors">{item.label}</a>
      )}
    </>
  ))}
</nav>
