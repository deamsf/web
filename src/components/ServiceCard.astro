---
import Icons from './react/Icons';


interface Props {
  title: string;
  description: string;
  icon: string;
  link: string;
}

const { title, description, icon, link } = Astro.props;





---

<a 
  href={link}
  class="bg-white/10 backdrop-blur-sm p-6 rounded-xl border border-accent/10 hover:border-accent/20 hover:bg-white/20 transition-all duration-300 flex flex-col"
>
  <div />
  
  <h3 class="text-xl font-bold text-white mb-2">{title}</h3>
  <p class="text-gray-300 text-sm flex-grow">{description}</p>
  
  <div class="mt-4 text-accent flex items-center text-sm">
    <span>Meer info </span>
    <Icons.ArrowRight size={16} class="inline-block" />
  </div>
</a>