---
import ContactForm from './react/ContactForm';
---

<section id="contact" class="section bg-primary py-20">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">Contact</h2>
      <p class="text-lg text-gray-300 max-w-2xl mx-auto">
        Klaar om jouw digitale strategie uit te werken? Let's talk!
      </p>
    </div>
    <div class="max-w-4xl mx-auto">
      <ContactForm client:visible />
    </div>
  </div>
</section>